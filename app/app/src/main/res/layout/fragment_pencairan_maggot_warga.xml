<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PencairanMaggotWargaFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonwarga"
            android:layout_width="150dp"
            android:layout_height="55dp"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="20dp"
            android:backgroundTint="@color/secondary"
            android:text="Warga"

            android:textColor="@color/white"
            android:textStyle="bold"
            app:cornerRadius="50dp"
            app:layout_constraintEnd_toStartOf="@+id/buttonwarung"
            app:layout_constraintHorizontal_bias="0.586"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonwarung"
            android:layout_width="150dp"
            android:layout_height="55dp"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="44dp"
            android:backgroundTint="@color/secondary"
            android:text="Warung"
            android:textColor="@color/white"
            android:textStyle="bold"
            app:cornerRadius="50dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/farmer_payment_title"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_marginTop="12dp"
            android:text="Pencairan Maggot Warga"
            android:textColor="@color/primary"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/buttonwarga" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/farmer_payment_shop_selection_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/rounded_edittext"
            android:paddingVertical="15dp"
            app:layout_constraintTop_toBottomOf="@+id/farmer_payment_title">

            <TextView
                android:id="@+id/farmer_payment_shop_selection_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="Nama Warga"
                android:textColor="@color/primary"
                android:textSize="18dp"
                android:textStyle="bold"
                app:layout_constraintTop_toTopOf="parent"
                tools:layout_editor_absoluteX="16dp" />

            <umn.ac.id.project.maggot.InstantAutoComplete
                android:id="@+id/namawarga"
                android:layout_width="244dp"
                android:layout_height="18dp"
                android:layout_marginTop="24dp"
                android:background="@drawable/rounded_edittext"
                android:ems="10"
                android:hint="Masukkan nama warga disini"
                android:inputType="textPersonName"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/farmer_payment_shop_selection_title" />

            <TextView
                android:id="@+id/selected_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textSize="12sp"
                app:layout_constraintStart_toStartOf="@+id/namawarga"
                app:layout_constraintTop_toBottomOf="@+id/namawarga" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/scan_qr_code_button"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="44dp"
            android:backgroundTint="@color/secondary"
            android:drawableLeft="@drawable/scan"
            android:text="Scan QR COde Warga"
            app:cornerRadius="50dp"
            app:layout_constraintTop_toBottomOf="@+id/farmer_payment_shop_selection_container"
            tools:layout_editor_absoluteX="28dp" />

        <TextView
            android:id="@+id/jumlahpencairan"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginStart="28dp"
            android:layout_marginTop="20dp"
            android:text="Jumlah Pencairan"
            android:textColor="@color/primary"
            android:textSize="25dp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/scan_qr_code_button" />

        <TextView
            android:id="@+id/jumlahpencairanrp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="44dp"
            android:layout_marginTop="4dp"
            android:text="Rp."
            android:textColor="@color/primary"
            android:textSize="25dp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/jumlahpencairan" />

        <EditText
            android:id="@+id/editText2"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/rounded_edittext"
            android:hint="Jumlah Bayar"
            android:inputType="number"
            android:digits="0123456789."
            android:paddingHorizontal="25dp"
            app:layout_constraintTop_toBottomOf="@+id/jumlahpencairanrp"
            tools:layout_editor_absoluteX="0dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/materialButton3"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="32dp"
            android:drawableLeft="@drawable/farmer_payment_wallet"
            android:text="Bayar Sekarang!"
            android:textColor="@color/black"
            android:textStyle="bold"
            app:backgroundTint="@color/light"
            app:cornerRadius="50dp"
            app:layout_constraintTop_toBottomOf="@+id/editText2"
            tools:layout_editor_absoluteX="28dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>