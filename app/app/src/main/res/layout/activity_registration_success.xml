<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:padding="20dp"
    tools:context=".RegistrationSuccess">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Permintaan Pendaftaran Berhasil Dikirim"
            android:textColor="@color/white"
            android:textSize="40sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/success_description_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:text="Permintaan pendaftaran Anda berhasil dikirim dan menunggu diverifikasi oleh petugas bank sampah."
            android:textColor="@color/white"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="@+id/title"
            app:layout_constraintTop_toBottomOf="@+id/title" />

        <TextView
            android:id="@+id/success_description_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:text="Proses ini membutuhkan waktu beberapa hari. Kami akan memberikan informasi pendaftaran ini secepatnya melalui email Anda."
            android:textColor="@color/white"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="@+id/success_description_1"
            app:layout_constraintTop_toBottomOf="@+id/success_description_1" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/confirm_button"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:backgroundTint="#3886F7"
            android:text="OKE"
            app:cornerRadius="50dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="@id/success_description_2"
            app:layout_constraintTop_toBottomOf="@id/success_description_2" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/back_to_login_page_button"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:backgroundTint="#3886F7"
            android:onClick="backToLoginPage"
            android:text="Kembali Ke Halaman Login"
            app:cornerRadius="50dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@id/confirm_button"
            app:layout_constraintTop_toBottomOf="@id/confirm_button" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>